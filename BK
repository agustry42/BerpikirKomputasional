    <script>
        // Navigation
        function showPage(pageId) {
            // Hide all pages
            document.querySelectorAll('.page-content').forEach(page => {
                page.classList.add('hidden');
            });
            
            // Show selected page
            document.getElementById(`page-${pageId}`).classList.remove('hidden');
            
            // Update navigation buttons
            document.querySelectorAll('nav button').forEach(btn => {
                btn.classList.remove('bg-blue-600', 'text-white');
                btn.classList.add('bg-gray-200', 'text-gray-700');
            });
            
            document.getElementById(`btn-${pageId}`).classList.remove('bg-gray-200', 'text-gray-700');
            document.getElementById(`btn-${pageId}`).classList.add('bg-blue-600', 'text-white');
        }

        // Studi Kasus - Admission Check
        function checkAdmission() {
            const math = parseInt(document.getElementById('nilai-math').value) || 0;
            const english = parseInt(document.getElementById('nilai-english').value) || 0;
            const average = parseInt(document.getElementById('nilai-average').value) || 0;
            
            const mathPass = math >= 80;
            const englishPass = english >= 75;
            const averagePass = average >= 78;
            const finalResult = mathPass && englishPass && averagePass;
            
            const resultDiv = document.getElementById('admission-result');
            const stepsDiv = document.getElementById('logic-steps');
            const finalDiv = document.getElementById('final-result');
            
            stepsDiv.innerHTML = `
                <div class="flex items-center space-x-2">
                    <span class="w-4 h-4 rounded-full ${mathPass ? 'bg-green-500' : 'bg-red-500'}"></span>
                    <span>Matematika (${math}) ‚â• 80: ${mathPass ? 'TRUE' : 'FALSE'}</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="w-4 h-4 rounded-full ${englishPass ? 'bg-green-500' : 'bg-red-500'}"></span>
                    <span>B. Inggris (${english}) ‚â• 75: ${englishPass ? 'TRUE' : 'FALSE'}</span>
                </div>
                <div class="flex items-center space-x-2">
                    <span class="w-4 h-4 rounded-full ${averagePass ? 'bg-green-500' : 'bg-red-500'}"></span>
                    <span>Rata-rata (${average}) ‚â• 78: ${averagePass ? 'TRUE' : 'FALSE'}</span>
                </div>
                <div class="border-t pt-2 mt-2">
                    <span class="font-medium">TRUE AND TRUE AND TRUE = ${finalResult ? 'TRUE' : 'FALSE'}</span>
                </div>
            `;
            
            if (finalResult) {
                resultDiv.className = 'mt-8 p-6 rounded-lg bg-green-50 border border-green-200';
                finalDiv.innerHTML = '<span class="text-green-800">üéâ DITERIMA! Selamat, Anda memenuhi semua kriteria.</span>';
            } else {
                resultDiv.className = 'mt-8 p-6 rounded-lg bg-red-50 border border-red-200';
                finalDiv.innerHTML = '<span class="text-red-800">‚ùå TIDAK DITERIMA. Beberapa kriteria belum terpenuhi.</span>';
            }
            
            resultDiv.classList.remove('hidden');
        }

        // PC Assembly Compatibility Checker
        function checkCompatibility() {
            const cpuSocket = document.getElementById('cpu-socket').value;
            const motherboard = document.getElementById('motherboard').value;
            const ramType = document.getElementById('ram-type').value;
            const psuWatt = parseInt(document.getElementById('psu-watt').value) || 0;
            const gpuPower = parseInt(document.getElementById('gpu-power').value) || 0;
            
            if (!cpuSocket || !motherboard || !ramType || !psuWatt) {
                alert('Mohon lengkapi semua pilihan komponen!');
                return;
            }
            
            const results = [];
            let compatible = true;
            
            // Check CPU-Motherboard compatibility
            const socketMatch = cpuSocket === motherboard;
            results.push({
                check: 'CPU Socket ‚Üî Motherboard',
                condition: `${cpuSocket} = ${motherboard}`,
                result: socketMatch,
                explanation: socketMatch ? 'Socket kompatibel' : 'Socket tidak kompatibel!'
            });
            
            if (!socketMatch) compatible = false;
            
            // Check RAM compatibility with motherboard
            let ramCompatible = false;
            if ((motherboard === 'LGA1700' || motherboard === 'AM5') && ramType === 'DDR5') {
                ramCompatible = true;
            } else if ((motherboard === 'AM4' || motherboard === 'LGA1200') && ramType === 'DDR4') {
                ramCompatible = true;
            }
            
            results.push({
                check: 'RAM ‚Üî Motherboard',
                condition: `${ramType} dengan ${motherboard}`,
                result: ramCompatible,
                explanation: ramCompatible ? 'RAM kompatibel' : 'Tipe RAM tidak didukung motherboard!'
            });
            
            if (!ramCompatible) compatible = false;
            
            // Check PSU power sufficiency
            const systemBasePower = 150; // CPU + Motherboard + RAM + Storage
            const totalPowerNeeded = systemBasePower + gpuPower;
            const powerSufficient = psuWatt >= totalPowerNeeded;
            
            results.push({
                check: 'Daya PSU',
                condition: `${psuWatt}W ‚â• ${totalPowerNeeded}W (${systemBasePower}W sistem + ${gpuPower}W GPU)`,
                result: powerSufficient,
                explanation: powerSufficient ? 'Daya PSU mencukupi' : 'PSU tidak mencukupi untuk sistem ini!'
            });
            
            if (!powerSufficient) compatible = false;
            
            // Display results
            const resultDiv = document.getElementById('compatibility-result');
            const detailsDiv = document.getElementById('compatibility-details');
            const conclusionDiv = document.getElementById('compatibility-conclusion');
            
            detailsDiv.innerHTML = results.map(result => `
                <div class="flex items-center justify-between p-3 rounded-lg ${result.result ? 'bg-green-50 border border-green-200' : 'bg-red-50 border border-red-200'}">
                    <div class="flex items-center space-x-3">
                        <span class="w-6 h-6 rounded-full flex items-center justify-center ${result.result ? 'bg-green-500' : 'bg-red-500'}">
                            <span class="text-white text-sm">${result.result ? '‚úì' : '‚úó'}</span>
                        </span>
                        <div>
                            <p class="font-medium ${result.result ? 'text-green-800' : 'text-red-800'}">${result.check}</p>
                            <p class="text-sm ${result.result ? 'text-green-600' : 'text-red-600'}">${result.condition}</p>
                        </div>
                    </div>
                    <span class="text-sm font-medium ${result.result ? 'text-green-700' : 'text-red-700'}">${result.explanation}</span>
                </div>
            `).join('');
            
            if (compatible) {
                conclusionDiv.className = 'mt-4 p-4 rounded-lg font-medium bg-green-100 border border-green-300 text-green-800';
                conclusionDiv.innerHTML = 'üéâ <strong>KOMPATIBEL!</strong> Semua komponen dapat bekerja bersama dengan baik. Sistem siap dirakit!';
            } else {
                conclusionDiv.className = 'mt-4 p-4 rounded-lg font-medium bg-red-100 border border-red-300 text-red-800';
                conclusionDiv.innerHTML = '‚ö†Ô∏è <strong>TIDAK KOMPATIBEL!</strong> Beberapa komponen tidak cocok. Silakan pilih komponen yang sesuai.';
            }
            
            resultDiv.classList.remove('hidden');
            
            // Scroll to results
            resultDiv.scrollIntoView({ behavior: 'smooth', block: 'start' });
        }

        // Truth Table
        function showTruthTable(operator) {
            const container = document.getElementById('truth-table-container');
            let tableHTML = '<h4 class="text-xl font-semibold text-gray-700 mb-4">Tabel Kebenaran:</h4>';
            
            if (operator === 'AND') {
                tableHTML += `
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse border border-gray-300">
                            <thead class="bg-blue-50">
                                <tr>
                                    <th class="border border-gray-300 px-4 py-2">P</th>
                                    <th class="border border-gray-300 px-4 py-2">Q</th>
                                    <th class="border border-gray-300 px-4 py-2">P ‚àß Q</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center bg-green-100">T</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center bg-red-100">F</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center bg-red-100">F</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center bg-red-100">F</td></tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">AND hanya TRUE jika kedua input TRUE</p>
                `;
            } else if (operator === 'OR') {
                tableHTML += `
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse border border-gray-300">
                            <thead class="bg-green-50">
                                <tr>
                                    <th class="border border-gray-300 px-4 py-2">P</th>
                                    <th class="border border-gray-300 px-4 py-2">Q</th>
                                    <th class="border border-gray-300 px-4 py-2">P ‚à® Q</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center bg-green-100">T</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center bg-green-100">T</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center bg-green-100">T</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center bg-red-100">F</td></tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">OR TRUE jika salah satu atau kedua input TRUE</p>
                `;
            } else if (operator === 'NOT') {
                tableHTML += `
                    <div class="overflow-x-auto">
                        <table class="w-full border-collapse border border-gray-300">
                            <thead class="bg-purple-50">
                                <tr>
                                    <th class="border border-gray-300 px-4 py-2">P</th>
                                    <th class="border border-gray-300 px-4 py-2">¬¨P</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">T</td><td class="border border-gray-300 px-4 py-2 text-center bg-red-100">F</td></tr>
                                <tr><td class="border border-gray-300 px-4 py-2 text-center">F</td><td class="border border-gray-300 px-4 py-2 text-center bg-green-100">T</td></tr>
                            </tbody>
                        </table>
                    </div>
                    <p class="text-sm text-gray-600 mt-2">NOT membalik nilai kebenaran</p>
                `;
            }
            
            container.innerHTML = tableHTML;
        }

