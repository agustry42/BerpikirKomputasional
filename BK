                    <!-- Contoh-contoh Praktis -->
                    <div class="grid md:grid-cols-2 gap-6 mb-6">
                        <div class="bg-blue-50 p-6 rounded-lg">
                            <h4 class="text-lg font-semibold text-blue-800 mb-4">Contoh Operator AND</h4>
                            <div class="space-y-3">
                                <div class="bg-white p-3 rounded border-l-4 border-blue-500">
                                    <p class="text-sm"><strong>Masuk Universitas:</strong></p>
                                    <p class="text-xs text-gray-600">Nilai ‚â• 80 AND Lulus Tes Wawancara</p>
                                    <p class="text-xs text-blue-700">Kedua syarat harus terpenuhi</p>
                                </div>
                                <div class="bg-white p-3 rounded border-l-4 border-blue-500">
                                    <p class="text-sm"><strong>Login Sistem:</strong></p>
                                    <p class="text-xs text-gray-600">Username benar AND Password benar</p>
                                    <p class="text-xs text-blue-700">Keduanya harus valid</p>
                                </div>
                            </div>
                        </div>

                        <div class="bg-green-50 p-6 rounded-lg">
                            <h4 class="text-lg font-semibold text-green-800 mb-4">Contoh Operator OR</h4>
                            <div class="space-y-3">
                                <div class="bg-white p-3 rounded border-l-4 border-green-500">
                                    <p class="text-sm"><strong>Diskon Belanja:</strong></p>
                                    <p class="text-xs text-gray-600">Member VIP OR Belanja > 500rb</p>
                                    <p class="text-xs text-green-700">Salah satu syarat cukup</p>
                                </div>
                                <div class="bg-white p-3 rounded border-l-4 border-green-500">
                                    <p class="text-sm"><strong>Akses Ruangan:</strong></p>
                                    <p class="text-xs text-gray-600">Kartu Akses OR Kode PIN</p>
                                    <p class="text-xs text-green-700">Bisa pakai salah satu</p>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="bg-gray-50 p-6 rounded-lg mb-6">
                        <h4 class="text-xl font-semibold text-gray-800 mb-4">Contoh Penerapan dalam Pemrograman:</h4>
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                <h5 class="font-medium text-gray-700 mb-2">Contoh 1: Validasi SIM</h5>
                                <div class="bg-gray-800 text-green-400 p-4 rounded-lg font-mono text-sm">
                                    <div>if (umur >= 17 AND memiliki_KTP == true) {</div>
                                    <div class="ml-4">status = "Boleh membuat SIM";</div>
                                    <div>} else {</div>
                                    <div class="ml-4">status = "Belum boleh membuat SIM";</div>
                                    <div>}</div>
                                </div>
                            </div>
                            <div>
                                <h5 class="font-medium text-gray-700 mb-2">Contoh 2: Sistem Kelulusan</h5>
                                <div class="bg-gray-800 text-green-400 p-4 rounded-lg font-mono text-sm">
                                    <div>if (nilai >= 75 OR tugas_lengkap == true) {</div>
                                    <div class="ml-4">hasil = "LULUS";</div>
                                    <div>} else {</div>
                                    <div class="ml-4">hasil = "TIDAK LULUS";</div>
                                    <div>}</div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Contoh Nested IF -->
                    <div class="bg-yellow-50 p-6 rounded-lg">
                        <h4 class="text-lg font-semibold text-yellow-800 mb-4">Contoh Nested IF (Kondisi Bertingkat)</h4>
                        <div class="grid md:grid-cols-2 gap-4">
                            <div>
                                <h5 class="font-medium text-yellow-700 mb-2">Sistem Penilaian Siswa:</h5>
                                <div class="bg-gray-800 text-green-400 p-4 rounded-lg font-mono text-xs">
                                    <div>if (nilai >= 90) {</div>
                                    <div class="ml-4">grade = "A";</div>
                                    <div>} else if (nilai >= 80) {</div>
                                    <div class="ml-4">grade = "B";</div>
                                    <div>} else if (nilai >= 70) {</div>
                                    <div class="ml-4">grade = "C";</div>
                                    <div>} else {</div>
                                    <div class="ml-4">grade = "D";</div>
                                    <div>}</div>
                                </div>
                            </div>
                            <div>
                                <h5 class="font-medium text-yellow-700 mb-2">Flowchart Nested IF:</h5>
                                <div class="bg-white p-3 rounded-lg">
                                    <svg class="w-full h-32" viewBox="0 0 200 120">
                                        <polygon points="100,10 120,20 100,30 80,20" fill="#F59E0B"/>
                                        <text x="100" y="23" text-anchor="middle" fill="white" font-size="8">‚â•90?</text>
                                        
                                        <polygon points="100,45 120,55 100,65 80,55" fill="#F59E0B"/>
                                        <text x="100" y="58" text-anchor="middle" fill="white" font-size="8">‚â•80?</text>
                                        
